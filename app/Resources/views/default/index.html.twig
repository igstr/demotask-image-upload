    <div class="row">
        {% for image in images %}
        <div class="col-sm-6 col-lg-4" style="margin-bottom: 1.25rem;">
            <div class="card">
                <img class="card-img-top" src="{{ image.src }}" alt="">
                <div class="card-body">
                    <h4 class="card-title">{{ image.title }}</h4>
                    <a href="{{ image.page_url }}" class="btn btn-primary">View Image</a>
