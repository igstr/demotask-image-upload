<nav aria-label="Page navigation">
    <ul class="pagination">

        {# Previous button #}
        <li class="page-item{{ page <= 1 ? ' disabled' }}">
            <a class="page-link" href="{{ path(routePages, {page: page - 1}) }}">Previous</a>
        </li>

        {# Render each page number #}
        {% for i in 1..lastPage %}
        <li class="page-item{{ page == i ? ' active' }}">
            <a class="page-link" href="{{ path(routePages, {page: i}) }}">{{ i }}</a>
        </li>
        {% endfor %}

        {# Next button #}
        <li class="page-item{{ page >= lastPage ? ' disabled' }}">
            <a class="page-link" href="{{ path(routePages, {page: page + 1}) }}">Next</a>
        </li>
    </ul>
</nav>
